{
  "manifest_version": 2,
  "name": "__MSG_app_name__",
  "version": "0.7.0",
  "description": "__MSG_app_description__",
  "permissions": [
    "storage",
    "geolocation"
  ],
  "optional_permissions": [
    "management",
    "topSites",
    "chrome://favicon/*",
    "bookmarks",
    "http://api.openweathermap.org/"
  ],
  "chrome_url_overrides": { "newtab": "index.html" },
  "background": {
    "page": "backgroundPage.html",
    "persistent": true
  },
  "default_locale": "en"
}
